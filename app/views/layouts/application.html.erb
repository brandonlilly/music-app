<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if logged_in? %>
    Hi <%= current_user.name %><%= button_to 'Logout', session_url(Session.find_by_token(session[:token]).id), method: :delete %>
  <% else %>
    <%= link_to 'Log in', new_session_url %> or
    <%= link_to 'Sign up', new_user_url %>
  <% end %>

  <%= render 'shared/messages' %>

  <%= yield %>

</body>
</html>
